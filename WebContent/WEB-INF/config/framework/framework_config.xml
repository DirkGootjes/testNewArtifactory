<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- This is the database against which the framework authenticates against. 
		If no value is specified, then default datasource is used. The default 
		datasource is specified in db_config.xml-->
	<authentication-datasource></authentication-datasource>
	<authorisation></authorisation>
	<presentation_layer_error_category>
		PresentationLayer
	</presentation_layer_error_category>
	<presentation_layer_default_error_code>
		PL03
	</presentation_layer_default_error_code>
	<error-message-cache>
		<error-message-loader>
			<loader-class>
				com.atradius.util.exception.messages.core.XMLErrorMessageLoader
			</loader-class>
			<load-on-startup>no</load-on-startup>
		</error-message-loader>
	</error-message-cache>
	<error-management>
		<show-internal-error>no</show-internal-error>
		<hide-stacktrace>yes</hide-stacktrace>
	</error-management>
</configuration>